<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="title" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="warning" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/colorWarning</item>
    </style>

    <style name="link" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:autoLink">web</item>
        <item name="android:clickable">true</item>
    </style>


</resources>
